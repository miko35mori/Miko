<h1>迷子の動物たち</h1>
<h3>新規投稿ページ</h3>
<div class="post-container">
<%= form_for @lost do |f| %>

  <div class="field">
    <%= f.label :animal_name %>
    <%= f.text_field :animal_name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :genre  %>
    <%= f.select :genre, 
    [["A", "A"], 
    ["B", "B"], 
    ["C", "C"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :color  %>
    <%= f.number_field :color, :size => 10 %>
  </div>

  <div class="field">
    <%= f.label :about  %>
    <%= f.text_area :about, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>
</div>
<%= link_to "一覧に戻る", losts_path %>