<h1>動物愛護団体一覧</h1>
<h3>Group詳細</h3>
<div class="group">
  <p><%= @group.group_name %></p>
  <p><%= @group.address %></p>
  <p><%= @group.scale %></p>
  <p><%= @group.animal %></p>
  <p><%= @group.about %></p>
  <p><%= @group.created_at %></p>
  <% if user_signed_in? %>
  <% if current_user.already_favorited?(@group) %>
      <%= link_to group_favorite_path(@group), method: :delete do %>
          ↓変更箇所
          <i class="fas fa-heart"></i><%= @group.favorites.count %>
          ↑変更箇所
      <% end %>
  <% else %>
      <%= link_to group_favorites_path(@group), method: :post do %>
          ↓変更箇所
          <i class="far fa-heart"></i><%= @group.favorites.count %>
          ↑変更箇所
      <% end %>
  <% end %>
<% else %>
  ↓変更箇所
  <i class="far fa-heart"></i><%= @group.favorites.count %>
  ↑変更箇所
<% end %>

<%= link_to "編集する", edit_lost_path(@group.id) %>
/div>

<h2>いいねしたユーザー</h2>
<% @group.favorited_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "Group一覧に戻る", groups_path %>

<div class="message-wrapper">
  <p>コメント一覧</p>
  <% @messages.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@group, @message], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-messages"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>
